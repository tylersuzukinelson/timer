$(document).ready(function() {

  var num = 10;
  $('#countdown').text(num);

  var timer = setInterval(function() {
    if (num > 1) {
      num -= 1;
    } else {
      num = 10;
    }
    $('#countdown').text(num);
  }, 1000);

  $('#save').on('click', function() {
    $.post('/save', { value: $('#countdown').text() }); 
  });

});